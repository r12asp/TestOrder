@using DomainModelOrder.ViewModel;
@using DomainModelOrder;
@using OrderExtension;
@model ProductPageViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOrder.cshtml";
}

<h2>Product</h2>
<script type="text/javascript">

    $(document).ready(function () {
        $("#CheckSubmit").click(function (e) {
            //e.preventDefault();
            var element = this;
            $.ajax({
                url: "/Product/Insert",
                type: "POST",
                data: $("#ggg").serialize(),
                //dataType: "json",
                //traditional: true,
                //contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#lll").html(data);
                    $("#ggg").trigger("reset");
                    location.reload();

                },
                error: function () {
                    alert("An error has occured!!!");
                }
            });
        });
        $("#DeleteSubmit").click(function (e) {
            //e.preventDefault();
            var element = this;
            $.ajax({
                url: "/Product/Delete",
                type: "POST",
                data: "pid=" + $("#pid").val(),
                //dataType: "json",
                //traditional: true,
                //contentType: "application/json; charset=utf-8",
                success: function (data) {
                    //alert(data);
                    location.reload();
                },
                error: function () {
                    alert("An error has occured!!!");
                }
            });
        });
    });


    function deleteProduct(pid,sku)
    {
        $("#deleteSpan").html(sku);
        $("#pid").val(pid);
    }
</script>
<div class="container">
    <button class="btn btn-default" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Create</button>
    <table class="table table-striped">
        <caption>Product List</caption>
        <tr>
            <th>#</th>
            <th>SKU</th>
            <th>Price</th>
            <th>Create Time</th>
            <th></th>
        </tr>
        @{
            int i = 1;
            foreach (ProductModel o in Model.Products)
            {
                <tr>
                    <td>@i</td>
                    <td>@o.SKU</td>
                    <td>@o.Price</td>
                    <td>@o.CreateTime</td>
                    <td><button class="btn btn-default" data-toggle="modal" onclick="deleteProduct('@o.ProductID','@o.SKU')" data-target="#myModalDelete">Delete</button><button class="btn btn-default">Edit</button></td>
                </tr>
                i++;
            }

        }
    </table>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New Product</h4>
            </div>
            <div class="modal-body">
                <form name="ggg" id="ggg">
                    <div class="form-group">
                        <label for="ProductName" class="control-label">Product Name</label>
                        <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="Product Name" />
                    </div>
                    <div class="form-group">
                        <label for="SKU" class="control-label">SKU</label>
                        <input type="text" class="form-control" id="SKU" name="SKU" placeholder="SKU" />
                    </div>
                    <div class="form-group">
                        <label for="Price" class="control-label">Price</label>
                        <input type="text" class="form-control" id="Price" name="Price" placeholder="Price" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <label name="lll" id="lll"></label>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="CheckSubmit" id="CheckSubmit">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="myDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myDeleteModalLabel">Delete Product</h4>
            </div>
            <div class="modal-body">
                Confirmation of delete Product : <span id="deleteSpan" name="deleteSpan"></span>
                <input type="hidden" name="pid" id="pid" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="DeleteSubmit" id="DeleteSubmit">Delete</button>
            </div>
        </div>
    </div>
</div>

